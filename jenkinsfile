pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                // Build the Docker image with the app
                sh 'sudo docker build -t ismail-app .'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests within a Docker container
                sh 'sudo docker run --rm ismail-app npm test'
            }
        }
        
        stage('Deploy') {
            steps {
                when {
                    expression {
                        currentBuild.result == 'SUCCESS'
                    }
                }
                // Deploy using docker run command
                sh 'sudo docker run -d -p 3000:3000 ismail-app'
            }
        }
    }
}
